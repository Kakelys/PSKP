<form>
    <label for="name">Phone:</label>
    <input type="text" id="phone" name="phone" value="{{office.phone}}" required />
    <label for="name">Address:</label>
    <input type="text" id="address" name="address" value="{{office.address}}" required />
    <label for="name">Email:</label>
    <input type="text" id="email" name="email" value="{{office.email}}" required />

    <input type="button" onClick="putCall({{office.id}}, {{office.country_id}})" value="Отправить" />
</form>

<script>
    async function putCall(id, countryId){ let json = JSON.stringify({ 
        id: id, 
        phone:document.getElementById('phone').value,
        address:document.getElementById('address').value,
        email:document.getElementById('email').value,
        countryId: countryId
    });
    const response = await fetch(`http://localhost:3000/offices/${id}`, { 
            method: 'PUT', headers: {
            'Content-Type': 'application/json' }, body: json 
        });
    }
</script>