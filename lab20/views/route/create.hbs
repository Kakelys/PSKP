<form action="/routes" method="post">
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required>
    <br>
    <label for="countryFromId">From:</label>
    <select name="countryFromId" id="countryFromId">
        {{#each countries}}
                <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <br>
    <label for="countryToId">To:</label>
    <select name="countryToId" id="countryToId">
        {{#each countries}}
                <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <br>
    <input type="submit" value="Отправить">
</form>